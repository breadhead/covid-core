{% extends "./utils/_layout.twig" %}

{% block content %}
    <table class="inner__table">
        <tr>
            <td class="text__p">
                <div>Здравствуйте,
                    {{ name }}!</div>
            </td>
        </tr>
        <tr>
            <td class="text__id">
                <div>Заявка №
                    {{ number }}</div>
            </td>
        </tr>
        <tr>
            <td class="text__h1">
                <div>Готов ответ эксперта по вашей консультации</div>
            </td>
        </tr>
        <tr>
            <td class="text__p">
                <div>
                    <a class="link" target="_blank" href="{{link}}">Посмотреть на сайте</a>.
                </div>
            </td>
        </tr>
        {% for item in qua %}
            <tr>
                <td class="text__question">
                    <div>
                        {{item.question}}
                    </div>
                </td>
            </tr>
            <tr>
                <td class="text__answer">
                    <div>
                        {{item.answer}}
                    </div>
                </td>
            </tr>
            <tr>
                <td class="text__question">
                    &nbsp;
                </td>
            </tr>
        {% endfor %}
    </table>
    <table class="inner__table button__table">
        <tr>
            <td class="button__td button__feedback">
                <table class="button__feedback-table">
                    <tr>
                        <td class="btn btn__td btn__feedback">
                            <a target="_blank" href="{{yesLink}}">
                                <nobr>Да, мне все понятно</nobr>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
            <td class="button__td button__no">
                <table>
                    <tr>
                        <td class="btn btn__td btn__no">
                            <a target="_blank" style="color: #151833;" href="{{noLink}}">
                                <nobr>Нет</nobr>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

{% endblock content %}