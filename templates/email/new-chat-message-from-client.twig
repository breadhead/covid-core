{% extends "./utils/_layout.twig" %}

{% block content %}
    <table class="inner__table">
        <tr>
            <td class="text__p">
                <div>Новое сообщение в заявке
                    {{ id }},
                    {{ name }}</div>
            </td>
        </tr>
        <tr>
            <td class="text__h1">
                <div>В чат по заявке №{{ id }}
                    со статусом
                    {{ status }}
                    пришло новое сообщение
                </div>
            </td>
        </tr>
        <tr>
            <td class="text__p">
                <div><br/>{{ text }}</div>
            </td>
        </tr>
        <tr>
            <td class="button__td">
                <table>
                    <tr>
                        <td class="btn btn__td">
                            <a target="_blank" href="{{link}}">
                                <nobr>Перейти в чат</nobr>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock content %}